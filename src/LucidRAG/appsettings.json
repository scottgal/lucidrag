{
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Port=5432;Database=ragdocs;Username=postgres;Password="
  },
  "RagDocuments": {
    "RequireApiKey": false,
    "ApiKey": "",
    "UploadPath": "./uploads",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [ ".pdf", ".docx", ".md", ".txt", ".html" ]
  },
  "DocSummarizer": {
    "EmbeddingBackend": "Onnx",
    "LlmBackend": "Ollama",
    "BertRag": {
      "VectorStore": "Qdrant",
      "CollectionName": "ragdocs",
      "PersistVectors": true,
      "ReuseExistingEmbeddings": true,
      "ReindexOnStartup": false
    },
    "Onnx": {
      "ExecutionProvider": "Auto",
      "EmbeddingModel": "AllMiniLmL6V2"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3.2:3b"
    },
    "Qdrant": {
      "Host": "localhost",
      "Port": 6334,
      "CollectionName": "ragdocs",
      "VectorSize": 384
    },
    "Docling": {
      "BaseUrl": "http://localhost:5001",
      "TimeoutSeconds": 300
    }
  },
  "Images": {
    "Mode": "Caption",
    "EnableOcr": true,
    "EnableClipEmbedding": true,
    "TextLikelinessThreshold": 0.4,
    "ModelsDirectory": "./models",
    "MaxImageSize": 2048,
    "ThumbnailSize": 256,
    "ColorGrid": {
      "Rows": 3,
      "Cols": 3,
      "TargetWidth": 384,
      "SampleStep": 2,
      "BucketBits": 4
    },
    "SupportedExtensions": [ ".jpg", ".jpeg", ".png", ".gif", ".webp", ".bmp", ".tiff" ],
    "Ocr": {
      "UseAdvancedPipeline": false,
      "QualityMode": "Fast",
      "ConfidenceThresholdForEarlyExit": 0.95,
      "EnableStabilization": true,
      "EnableBackgroundSubtraction": false,
      "EnableEdgeConsensus": false,
      "EnableTemporalMedian": true,
      "EnableSuperResolution": false,
      "EnableTextDetection": false,
      "EnableTemporalVoting": true,
      "EnablePostCorrection": false,
      "MaxFramesForSuperResolution": 5,
      "MaxFramesForVoting": 10,
      "StabilizationConfidenceThreshold": 0.7,
      "SsimDeduplicationThreshold": 0.95,
      "NmsIouThreshold": 0.3,
      "TextDetectionConfidenceThreshold": 0.5,
      "TextDetectionPadding": 4,
      "SaveIntermediateImages": false,
      "IntermediateOutputDirectory": "./ocr-debug",
      "EmitPerformanceMetrics": true
    }
  },
  "EvidenceStorage": {
    "BasePath": null,
    "DefaultProvider": "filesystem",
    "TemporaryArtifactRetentionDays": 7,
    "ProcessingLogRetentionDays": 30
  },
  "Anthropic": {
    "ApiKey": "${ANTHROPIC_API_KEY}",
    "Model": "claude-3-5-haiku-latest",
    "MaxTokens": 4096,
    "Temperature": 0.3
  },
  "OpenAI": {
    "ApiKey": "${OPENAI_API_KEY}",
    "Model": "gpt-4o-mini",
    "EmbeddingModel": "text-embedding-3-small",
    "MaxTokens": 4096,
    "Temperature": 0.3
  },
  "Prompts": {
    "SystemPrompts": {
      "Default": "You are a helpful assistant that answers questions based on the provided documents. Always cite your sources using [1], [2], etc.",
      "Technical": "You are a technical documentation expert. Provide precise, code-focused answers with examples. Always cite sources.",
      "Research": "You are a research assistant. Provide comprehensive analysis with multiple perspectives. Always cite sources.",
      "Concise": "You are a concise assistant. Provide brief, direct answers in 1-2 sentences. Always cite sources."
    },
    "QueryClarification": {
      "Enabled": true,
      "AmbiguityThreshold": 0.7
    },
    "QueryDecomposition": {
      "Enabled": true,
      "MaxSubQueries": 5
    },
    "SelfCorrection": {
      "Enabled": true,
      "MaxRetries": 2
    },
    "ResponseSynthesis": {
      "IncludeSources": true,
      "MaxSourcesPerResponse": 10
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
