{
  "RagDocuments": {
    "RequireApiKey": false,
    "ApiKey": "",
    "UploadPath": "./uploads",
    "MaxFileSizeMB": 100,
    "AllowedExtensions": [ ".pdf", ".docx", ".md", ".txt", ".html" ]
  },
  "DocSummarizer": {
    "EmbeddingBackend": "Onnx",
    "BertRag": {
      "VectorStore": "DuckDB",
      "CollectionName": "ragdocs",
      "PersistVectors": true,
      "ReuseExistingEmbeddings": true,
      "ReindexOnStartup": false
    },
    "Onnx": {
      "ExecutionProvider": "Auto",
      "EmbeddingModel": "AllMiniLmL6V2"
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3.2:3b"
    }
  },
  "Prompts": {
    "SystemPrompts": {
      "Default": "You are a helpful assistant that answers questions based on the provided documents. Always cite your sources using [1], [2], etc.",
      "Technical": "You are a technical documentation expert. Provide precise, code-focused answers with examples. Always cite sources.",
      "Research": "You are a research assistant. Provide comprehensive analysis with multiple perspectives. Always cite sources.",
      "Concise": "You are a concise assistant. Provide brief, direct answers in 1-2 sentences. Always cite sources."
    },
    "QueryClarification": {
      "Enabled": true,
      "AmbiguityThreshold": 0.7
    },
    "QueryDecomposition": {
      "Enabled": true,
      "MaxSubQueries": 5
    },
    "SelfCorrection": {
      "Enabled": true,
      "MaxRetries": 2
    },
    "ResponseSynthesis": {
      "IncludeSources": true,
      "MaxSourcesPerResponse": 10
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj}{NewLine}{Exception}"
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
