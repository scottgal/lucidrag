@model LucidRAG.Controllers.UI.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "_Layout";
}

<div class="min-h-[80vh] flex items-center justify-center">
    <div class="card w-full max-w-md bg-base-100 shadow-xl">
        <div class="card-body">
            <h2 class="card-title text-2xl font-bold justify-center mb-4">Create an Account</h2>

            <form method="post" asp-action="Register" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                @Html.AntiForgeryToken()

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-error mb-4">
                        <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
                        </svg>
                        <div>
                            @Html.ValidationSummary(true)
                        </div>
                    </div>
                }

                <div class="form-control w-full">
                    <label class="label">
                        <span class="label-text">Display Name</span>
                        <span class="label-text-alt">(optional)</span>
                    </label>
                    <input type="text"
                           asp-for="DisplayName"
                           placeholder="Your name"
                           class="input input-bordered w-full" />
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Email</span>
                    </label>
                    <input type="email"
                           asp-for="Email"
                           placeholder="you@example.com"
                           class="input input-bordered w-full"
                           required />
                    <span asp-validation-for="Email" class="text-error text-sm mt-1"></span>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Password</span>
                    </label>
                    <input type="password"
                           asp-for="Password"
                           placeholder="At least 8 characters"
                           class="input input-bordered w-full"
                           minlength="8"
                           required />
                    <span asp-validation-for="Password" class="text-error text-sm mt-1"></span>
                    <label class="label">
                        <span class="label-text-alt text-base-content/60">Minimum 8 characters with at least one number</span>
                    </label>
                </div>

                <div class="form-control w-full mt-4">
                    <label class="label">
                        <span class="label-text">Confirm Password</span>
                    </label>
                    <input type="password"
                           asp-for="ConfirmPassword"
                           placeholder="Repeat your password"
                           class="input input-bordered w-full"
                           required />
                    <span asp-validation-for="ConfirmPassword" class="text-error text-sm mt-1"></span>
                </div>

                <div class="form-control mt-6">
                    <button type="submit" class="btn btn-primary w-full">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                        </svg>
                        Create Account
                    </button>
                </div>
            </form>

            <div class="divider">OR</div>

            <p class="text-center text-sm">
                Already have an account?
                <a asp-action="Login" asp-route-returnUrl="@ViewData["ReturnUrl"]" class="link link-primary">
                    Login here
                </a>
            </p>
        </div>
    </div>
</div>
