@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout";
}

<div class="min-h-[60vh] flex items-center justify-center">
    <div class="text-center">
        <div class="text-9xl font-bold text-error/20">403</div>
        <h1 class="text-3xl font-bold mt-4">Access Denied</h1>
        <p class="mt-2 text-base-content/70">You don't have permission to access this resource.</p>
        <div class="mt-6 flex gap-4 justify-center">
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                Go to Home
            </a>
            <a asp-controller="Auth" asp-action="Login" class="btn btn-ghost">
                Login with Different Account
            </a>
        </div>
    </div>
</div>
