@* Shared search controls for both admin and public views *@

<!-- Search Mode Toggle -->
<div class="flex items-center gap-2">
    <!-- Search Mode Selector -->
    <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-sm gap-2">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            <span x-text="searchMode === 'full' ? 'Full' : searchMode === 'simple' ? 'Simple' : 'Vector'"></span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
        </label>
        <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 border border-base-300 rounded-box w-52 mt-2">
            <li>
                <button @@click="setSearchMode('full')" :class="searchMode === 'full' ? 'active' : ''">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
                    </svg>
                    <div class="flex-1">
                        <div class="font-medium">Full Search</div>
                        <div class="text-xs text-base-content/60">Hybrid semantic + keyword</div>
                    </div>
                </button>
            </li>
            <li>
                <button @@click="setSearchMode('simple')" :class="searchMode === 'simple' ? 'active' : ''">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                    </svg>
                    <div class="flex-1">
                        <div class="font-medium">Simple Search</div>
                        <div class="text-xs text-base-content/60">Keyword & full-text only</div>
                    </div>
                </button>
            </li>
            <li>
                <button @@click="setSearchMode('vector')" :class="searchMode === 'vector' ? 'active' : ''">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01" />
                    </svg>
                    <div class="flex-1">
                        <div class="font-medium">Vector Search</div>
                        <div class="text-xs text-base-content/60">Semantic similarity only</div>
                    </div>
                </button>
            </li>
        </ul>
    </div>

    <!-- Advanced Search Button -->
    <button @@click="advancedSearchOpen = !advancedSearchOpen"
            :class="advancedSearchOpen ? 'btn-active' : ''"
            class="btn btn-ghost btn-sm btn-square"
            title="Advanced search filters">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6V4m0 2a2 2 0 100 4m0-4a2 2 0 110 4m-6 8a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4m6 6v10m6-2a2 2 0 100-4m0 4a2 2 0 110-4m0 4v2m0-6V4" />
        </svg>
    </button>
</div>

<!-- Advanced Search Modal -->
<div x-show="advancedSearchOpen"
     x-transition:enter="transition ease-out duration-200"
     x-transition:enter-start="opacity-0"
     x-transition:enter-end="opacity-100"
     x-transition:leave="transition ease-in duration-150"
     x-transition:leave-start="opacity-100"
     x-transition:leave-end="opacity-0"
     @@click.self="advancedSearchOpen = false"
     class="fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">

    <div @@click.stop
         x-transition:enter="transition ease-out duration-200"
         x-transition:enter-start="opacity-0 scale-95"
         x-transition:enter-end="opacity-100 scale-100"
         x-transition:leave="transition ease-in duration-150"
         x-transition:leave-start="opacity-100 scale-100"
         x-transition:leave-end="opacity-0 scale-95"
         class="bg-base-100 rounded-lg shadow-xl max-w-2xl w-full max-h-[80vh] overflow-y-auto">

        <!-- Modal Header -->
        <div class="sticky top-0 bg-base-100 border-b border-base-300 px-6 py-4 flex items-center justify-between">
            <h3 class="text-lg font-semibold">Advanced Search</h3>
            <button @@click="advancedSearchOpen = false" class="btn btn-ghost btn-sm btn-square">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
            </button>
        </div>

        <!-- Modal Body -->
        <div class="p-6 space-y-6">
            <!-- Date Range -->
            <div>
                <label class="label">
                    <span class="label-text font-medium">Date Range</span>
                </label>
                <div class="flex gap-2 items-center">
                    <input type="date"
                           x-model="advancedFilters.dateFrom"
                           class="input input-bordered input-sm flex-1"
                           placeholder="From date" />
                    <span class="text-base-content/50">to</span>
                    <input type="date"
                           x-model="advancedFilters.dateTo"
                           class="input input-bordered input-sm flex-1"
                           placeholder="To date" />
                </div>
            </div>

            <!-- Signal Filters (populated from collection) -->
            <div x-show="selectedCollection">
                <label class="label">
                    <span class="label-text font-medium">Document Signals</span>
                    <span class="label-text-alt text-base-content/60">Filter by detected signals</span>
                </label>

                <!-- Color Signal Example -->
                <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-2">
                        <input type="checkbox"
                               x-model="advancedFilters.signals"
                               value="has_images"
                               class="checkbox checkbox-sm checkbox-primary" />
                        <span class="label-text">Contains images</span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-2">
                        <input type="checkbox"
                               x-model="advancedFilters.signals"
                               value="has_tables"
                               class="checkbox checkbox-sm checkbox-primary" />
                        <span class="label-text">Contains tables</span>
                    </label>
                </div>

                <div class="form-control">
                    <label class="label cursor-pointer justify-start gap-2">
                        <input type="checkbox"
                               x-model="advancedFilters.signals"
                               value="has_code"
                               class="checkbox checkbox-sm checkbox-primary" />
                        <span class="label-text">Contains code blocks</span>
                    </label>
                </div>

                <!-- Add more signal filters dynamically based on collection metadata -->
            </div>

            <!-- Entity Type Filter -->
            <div x-show="selectedCollection">
                <label class="label">
                    <span class="label-text font-medium">Entity Types</span>
                </label>
                <div class="flex flex-wrap gap-2">
                    <button class="badge badge-lg badge-outline hover:badge-primary cursor-pointer">Person</button>
                    <button class="badge badge-lg badge-outline hover:badge-primary cursor-pointer">Organization</button>
                    <button class="badge badge-lg badge-outline hover:badge-primary cursor-pointer">Concept</button>
                    <button class="badge badge-lg badge-outline hover:badge-primary cursor-pointer">Technology</button>
                </div>
            </div>
        </div>

        <!-- Modal Footer -->
        <div class="sticky bottom-0 bg-base-100 border-t border-base-300 px-6 py-4 flex gap-2 justify-end">
            <button @@click="clearAdvancedFilters()" class="btn btn-ghost btn-sm">Clear All</button>
            <button @@click="applyAdvancedFilters()" class="btn btn-primary btn-sm">Apply Filters</button>
        </div>
    </div>
</div>
