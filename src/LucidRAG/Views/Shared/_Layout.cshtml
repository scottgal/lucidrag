<!DOCTYPE html>
<html lang="en" data-theme="light">
<script>
    // Apply saved theme immediately to prevent flash
    (function() {
        const savedTheme = localStorage.getItem('lucidrag-theme') || 'light';
        document.documentElement.setAttribute('data-theme', savedTheme);
    })();
</script>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LucidRag - Multi-Document RAG</title>

    <!-- Raleway font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap" rel="stylesheet">

    <!-- Tailwind CSS + DaisyUI (compiled) -->
    <link href="~/css/dist/main.css" rel="stylesheet" type="text/css" />

    <!-- FilePond for file uploads -->
    <link href="https://unpkg.com/filepond/dist/filepond.min.css" rel="stylesheet" />
    <link href="https://unpkg.com/filepond-plugin-file-poster/dist/filepond-plugin-file-poster.min.css" rel="stylesheet" />
    <script src="https://unpkg.com/filepond-plugin-file-validate-type/dist/filepond-plugin-file-validate-type.min.js"></script>
    <script src="https://unpkg.com/filepond-plugin-file-validate-size/dist/filepond-plugin-file-validate-size.min.js"></script>
    <script src="https://unpkg.com/filepond/dist/filepond.min.js"></script>

    <!-- Alpine.js -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.14.1/dist/cdn.min.js"></script>

    <!-- HTMX -->
    <script src="https://unpkg.com/htmx.org@2.0.3"></script>
    <script src="https://unpkg.com/htmx-ext-sse@2.2.2/sse.js"></script>

    <!-- D3.js for graph visualization -->
    <script src="https://d3js.org/d3.v7.min.js"></script>

    <style>
        /* Brand font - extending Tailwind */
        .font-brand {
            font-family: 'Raleway', sans-serif;
        }
    </style>
</head>
<body class="h-screen flex flex-col bg-base-200">
    <!-- Header -->
    <header class="navbar bg-gradient-to-r from-slate-800 to-slate-900 shadow-lg px-4">
        <div class="flex-1">
            <a href="/" class="flex items-center gap-2">
                <img src="~/img/logo.svg" alt="LucidRag" class="h-8" />
            </a>
        </div>
        <div class="flex-none gap-2 flex items-center">
            <!-- Articles Dropdown -->
            <div class="dropdown dropdown-end" x-data="articlesDropdown()">
                <button tabindex="0" class="btn btn-ghost btn-sm text-slate-300 hover:text-white" @@click="loadArticles()">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                    </svg>
                    Articles
                </button>
                <ul tabindex="0" class="dropdown-content z-[100] menu p-2 shadow-lg bg-base-100 rounded-box w-80 max-h-96 overflow-y-auto">
                    <template x-if="loading">
                        <li class="text-center py-4"><span class="loading loading-spinner loading-sm"></span></li>
                    </template>
                    <template x-if="!loading && articles.length === 0">
                        <li class="text-center py-4 text-sm opacity-60">No articles found</li>
                    </template>
                    <template x-for="article in articles" :key="article.link">
                        <li>
                            <a :href="article.link" target="_blank" class="flex flex-col items-start gap-1">
                                <span class="font-medium text-sm line-clamp-2" x-text="article.title"></span>
                                <span class="text-xs opacity-60" x-text="article.date"></span>
                            </a>
                        </li>
                    </template>
                    <template x-if="!loading && articles.length > 0">
                        <li class="border-t border-base-300 mt-2 pt-2">
                            <a href="https://www.mostlylucid.net/category/RAG" target="_blank" class="text-sm text-primary">
                                View all RAG articles â†’
                            </a>
                        </li>
                    </template>
                </ul>
            </div>

            <a href="https://lucidrag.com" target="_blank" class="text-slate-300 hover:text-white text-sm font-medium transition-colors"><span class="italic">lucid</span>rag.com</a>
            <a href="/scalar/v1" target="_blank" class="btn btn-ghost btn-sm text-slate-300 hover:text-white">API Docs</a>
            <label class="swap swap-rotate btn btn-ghost btn-sm text-slate-300 hover:text-white">
                <input type="checkbox" class="theme-controller" value="dark" />
                <svg class="swap-on h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M21.64,13a1,1,0,0,0-1.05-.14,8.05,8.05,0,0,1-3.37.73A8.15,8.15,0,0,1,9.08,5.49a8.59,8.59,0,0,1,.25-2A1,1,0,0,0,8,2.36,10.14,10.14,0,1,0,22,14.05,1,1,0,0,0,21.64,13Z"/></svg>
                <svg class="swap-off h-5 w-5 fill-current" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24"><path d="M5.64,17l-.71.71a1,1,0,0,0,0,1.41,1,1,0,0,0,1.41,0l.71-.71A1,1,0,0,0,5.64,17ZM5,12a1,1,0,0,0-1-1H3a1,1,0,0,0,0,2H4A1,1,0,0,0,5,12Zm7-7a1,1,0,0,0,1-1V3a1,1,0,0,0-2,0V4A1,1,0,0,0,12,5ZM5.64,7.05a1,1,0,0,0,.7.29,1,1,0,0,0,.71-.29,1,1,0,0,0,0-1.41l-.71-.71A1,1,0,0,0,4.93,6.34Zm12,.29a1,1,0,0,0,.7-.29l.71-.71a1,1,0,1,0-1.41-1.41L17,5.64a1,1,0,0,0,0,1.41A1,1,0,0,0,17.66,7.34ZM21,11H20a1,1,0,0,0,0,2h1a1,1,0,0,0,0-2Zm-9,8a1,1,0,0,0-1,1v1a1,1,0,0,0,2,0V20A1,1,0,0,0,12,19ZM18.36,17A1,1,0,0,0,17,18.36l.71.71a1,1,0,0,0,1.41,0,1,1,0,0,0,0-1.41ZM12,6.5A5.5,5.5,0,1,0,17.5,12,5.51,5.51,0,0,0,12,6.5Zm0,9A3.5,3.5,0,1,1,15.5,12,3.5,3.5,0,0,1,12,15.5Z"/></svg>
            </label>
        </div>
    </header>

    <!-- Main content -->
    <main class="flex-1 flex overflow-hidden">
        @RenderBody()
    </main>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // Theme persistence
        (function() {
            const savedTheme = localStorage.getItem('lucidrag-theme') || 'light';
            const themeCheckbox = document.querySelector('.theme-controller');
            if (themeCheckbox) {
                themeCheckbox.checked = savedTheme === 'dark';
                themeCheckbox.addEventListener('change', function() {
                    const newTheme = this.checked ? 'dark' : 'light';
                    document.documentElement.setAttribute('data-theme', newTheme);
                    localStorage.setItem('lucidrag-theme', newTheme);
                });
            }
        })();

        // Articles dropdown - fetches RAG articles from mostlylucid RSS
        function articlesDropdown() {
            return {
                articles: [],
                loading: false,
                loaded: false,

                async loadArticles() {
                    if (this.loaded) return;
                    this.loading = true;

                    try {
                        // Use a CORS proxy or server-side endpoint to fetch RSS
                        const response = await fetch('/api/articles/rag');
                        if (response.ok) {
                            this.articles = await response.json();
                        } else {
                            // Fallback: hardcoded list of key RAG articles
                            this.articles = [
                                { title: 'Agentic RAG Pipeline', link: 'https://www.mostlylucid.net/blog/agentic-rag-pipeline', date: '2024' },
                                { title: 'GraphRAG Entity Extraction', link: 'https://www.mostlylucid.net/blog/graphrag-entity-extraction', date: '2024' },
                                { title: 'Multi-Document RAG', link: 'https://www.mostlylucid.net/blog/multi-document-rag', date: '2024' }
                            ];
                        }
                    } catch (e) {
                        console.warn('Could not load articles:', e);
                        // Fallback list
                        this.articles = [
                            { title: 'Agentic RAG Pipeline', link: 'https://www.mostlylucid.net/blog/agentic-rag-pipeline', date: '2024' },
                            { title: 'GraphRAG Entity Extraction', link: 'https://www.mostlylucid.net/blog/graphrag-entity-extraction', date: '2024' }
                        ];
                    } finally {
                        this.loading = false;
                        this.loaded = true;
                    }
                }
            };
        }
    </script>
</body>
</html>
