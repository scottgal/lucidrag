@model LucidRAG.Controllers.UI.CollectionDeleteViewModel
@{
    ViewData["Title"] = "Delete Collection";
}

<div class="p-6 max-w-2xl">
    <div class="mb-6">
        <a href="@Url.Action("Collections")" class="btn btn-ghost btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
            </svg>
            Back to Collections
        </a>
    </div>

    <div class="card bg-base-100 shadow">
        <div class="card-body">
            <div class="flex items-start gap-4">
                <div class="bg-error/10 p-3 rounded-full">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                </div>
                <div>
                    <h1 class="text-2xl font-bold text-error">Delete Collection</h1>
                    <p class="text-base-content/60 mt-1">This action cannot be undone</p>
                </div>
            </div>

            <div class="alert alert-warning my-6">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                </svg>
                <div>
                    <p class="font-medium">You are about to delete:</p>
                    <ul class="mt-2 ml-4 list-disc">
                        <li>Collection: <strong>@Model.Name</strong></li>
                        <li>@Model.DocumentCount document(s) and their embeddings</li>
                        <li>All extracted entities from these documents</li>
                    </ul>
                </div>
            </div>

            <form method="post" asp-action="DeleteCollectionConfirmed" asp-route-id="@Model.Id">
                @Html.AntiForgeryToken()

                <div class="flex gap-2">
                    <button type="submit" class="btn btn-error">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        Delete Collection
                    </button>
                    <a href="@Url.Action("Collections")" class="btn btn-ghost">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
