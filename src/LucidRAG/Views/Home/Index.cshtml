@section Scripts {
<script>
// Initialize FilePond
FilePond.registerPlugin(
    FilePondPluginFileValidateType,
    FilePondPluginFileValidateSize
);

// Global FilePond instance
let pond = null;

function ragApp() {
    return {
        // Core state
        documents: [],
        documentCount: @documents.Count,
        segmentCount: @totalSegments,
        messages: [],
        currentMessage: '',
        conversationId: null,
        isTyping: false,
        uploads: [],
        selectedDocIds: new Set(),
        isDragging: false,

        // Collection state
        collections: [],
        currentCollectionId: null,
        newCollectionName: '',
        showCreateCollection: false,

        // Community state
        communityList: [],
        communityStats: { totalCommunities: 0 },
        selectedCommunityId: null,

        // Processing status state (SignalR)
        processingStatus: {
            currentDocument: null,
            progress: 0,
            stage: '',
            recentEvents: []
        },
        hubConnection: null,

        // Demo mode state
        demoMode: false,
        demoBannerMessage: '',

        // Content tab state (Upload / Crawl)
        contentTab: 'upload',

        // Crawl state
        crawlUrl: '',
        crawlSelector: '',
        crawlMaxPages: 50,
        crawlMaxDepth: 3,
        crawlInProgress: false,
        crawlProgress: null,
        crawlEventSource: null,

        // View state
        viewMode: 'answer', // 'answer', 'evidence', 'graph'
        graphRagEnabled: true,
        showDebugPanel: false,

        // Search mode state: 'hybrid', 'semantic', 'keyword'
        searchMode: 'hybrid',

        // Chat history state
        showChatHistory: false,
        chatHistory: [],
        chatHistoryLoading: false,

        // Evidence view state
        lastAnswer: null,
        selectedSentence: null,
        selectedEvidence: [],

        // Segment detail modal state
        selectedSegment: null,

        // Document details modal state
        documentDetails: null,
        detailsTab: 'entities',

        // Graph view state
        graphData: null,
        selectedEntity: null,
        graphSettings: {
            maxHops: 2,
            edgeFilter: 'all',
            preferAuthoritative: false
        },
        graphStats: {
            nodes: 0,
            edges: 0,
            entityCoverage: '0%',
            orphans: 0
        },

        // Extraction mode state
        extractionModes: [],
        currentExtractionMode: 'heuristic',
        ollamaAvailable: false,

        // Debug state
        debugInfo: null,

        // Clear all state
        clearingAll: false,

        async init() {
            await this.checkDemoMode();
            await this.loadExtractionModes();
            await this.loadCollections();
            await this.loadCommunities();
            this.loadGraphStats();
            this.initSignalR();
            if (!this.demoMode) {
                // Wait for Alpine to render the input element after x-if evaluates
                this.$nextTick(() => {
                    this.initFilePond();
                });
            }
            // Restore conversation from cookie
            await this.restoreConversation();
        },

        initSignalR() {
            if (typeof signalR === 'undefined') {
                console.warn('SignalR not loaded');
                return;
            }

            this.hubConnection = new signalR.HubConnectionBuilder()
                .withUrl('/hubs/processing')
                .withAutomaticReconnect()
                .build();

            this.hubConnection.on('DocumentProcessing', (data) => {
                this.handleProcessingUpdate(data);
            });

            this.hubConnection.on('QueueStatus', (data) => {
                this.handleQueueStatus(data);
            });

            this.hubConnection.start()
                .then(() => console.log('SignalR connected'))
                .catch(err => console.warn('SignalR connection failed:', err));
        },

        handleProcessingUpdate(data) {
            // Add to recent events (keep last 10)
            this.processingStatus.recentEvents.unshift({
                ...data,
                receivedAt: new Date()
            });
            if (this.processingStatus.recentEvents.length > 10) {
                this.processingStatus.recentEvents.pop();
            }

            // Update current document status
            if (data.type === 'started' || data.type === 'progress') {
                this.processingStatus.currentDocument = data.documentName;
                this.processingStatus.progress = data.progress || 0;
                this.processingStatus.stage = data.stage || 'Processing';
            } else if (data.type === 'completed' || data.type === 'failed') {
                // Clear current if it matches
                if (this.processingStatus.currentDocument === data.documentName) {
                    setTimeout(() => {
                        this.processingStatus.currentDocument = null;
                        this.processingStatus.progress = 0;
                        this.processingStatus.stage = '';
                    }, 2000);
                }

                // Refresh collections to update counts
                this.loadCollections();
            }
        },

        handleQueueStatus(data) {
            // Could update a queue status display
            console.log('Queue status:', data);
        },

        // Cookie utilities
        getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
            return null;
        },

        setCookie(name, value, days = 7) {
            const expires = new Date(Date.now() + days * 864e5).toUTCString();
            document.cookie = `${name}=${value}; expires=${expires}; path=/; SameSite=Lax`;
        },

        deleteCookie(name) {
            document.cookie = `${name}=; expires=Thu, 01 Jan 1970 00:00:00 GMT; path=/`;
        },

        async restoreConversation() {
            const savedConversationId = this.getCookie('lucidrag-conversation');
            if (!savedConversationId) return;

            try {
                const response = await fetch(`/api/chat/conversations/${savedConversationId}`);
                if (response.ok) {
                    const data = await response.json();
                    this.conversationId = data.id;
                    // Load messages
                    this.messages = data.messages.map((m, i) => ({
                        id: i,
                        role: m.role,
                        content: m.content,
                        sources: [],
                        timestamp: m.createdAt
                    }));
                    console.log(`Restored conversation ${savedConversationId} with ${this.messages.length} messages`);
                } else {
                    // Conversation not found, clear cookie
                    this.deleteCookie('lucidrag-conversation');
                }
            } catch (e) {
                console.warn('Could not restore conversation:', e);
                this.deleteCookie('lucidrag-conversation');
            }
        },

        startNewChat() {
            this.messages = [];
            this.conversationId = null;
            this.lastAnswer = null;
            this.graphData = null;
            this.debugInfo = null;
            this.deleteCookie('lucidrag-conversation');
        },

        async toggleChatHistory() {
            this.showChatHistory = !this.showChatHistory;
            if (this.showChatHistory && this.chatHistory.length === 0) {
                await this.loadChatHistory();
            }
        },

        async loadChatHistory() {
            this.chatHistoryLoading = true;
            try {
                const url = this.currentCollectionId
                    ? `/api/chat/conversations?collectionId=${this.currentCollectionId}`
                    : '/api/chat/conversations';
                const response = await fetch(url);
                if (response.ok) {
                    const data = await response.json();
                    this.chatHistory = data.conversations || [];
                }
            } catch (e) {
                console.warn('Could not load chat history:', e);
            } finally {
                this.chatHistoryLoading = false;
            }
        },

        async loadConversation(id) {
            try {
                const response = await fetch(`/api/chat/conversations/${id}`);
                if (response.ok) {
                    const data = await response.json();
                    this.conversationId = data.id;
                    this.messages = data.messages.map(m => ({
                        id: m.id,
                        role: m.role,
                        content: m.content,
                        sources: [],
                        timestamp: m.createdAt
                    }));
                    this.setCookie('lucidrag-conversation', data.id);
                    this.showChatHistory = false;
                }
            } catch (e) {
                console.warn('Could not load conversation:', e);
            }
        },

        async deleteConversation(id) {
            if (!confirm('Delete this chat?')) return;
            try {
                await fetch(`/api/chat/conversations/${id}`, { method: 'DELETE' });
                this.chatHistory = this.chatHistory.filter(c => c.id !== id);
                if (this.conversationId === id) {
                    this.startNewChat();
                }
            } catch (e) {
                console.warn('Could not delete conversation:', e);
            }
        },

        formatChatDate(dateStr) {
            if (!dateStr) return '';
            const date = new Date(dateStr);
            const now = new Date();
            const diff = now - date;
            if (diff < 60000) return 'Just now';
            if (diff < 3600000) return `${Math.floor(diff / 60000)}m ago`;
            if (diff < 86400000) return `${Math.floor(diff / 3600000)}h ago`;
            if (diff < 604800000) return `${Math.floor(diff / 86400000)}d ago`;
            return date.toLocaleDateString();
        },

        formatTimestamp(timestamp) {
            if (!timestamp) return '';
            const date = new Date(timestamp);
            const now = new Date();
            const diff = now - date;
            // Within the last minute
            if (diff < 60000) return 'Just now';
            // Within the last hour
            if (diff < 3600000) return `${Math.floor(diff / 60000)}m ago`;
            // Within today - show time
            if (date.toDateString() === now.toDateString()) {
                return date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }
            // Within the last week
            if (diff < 604800000) {
                return date.toLocaleDateString([], { weekday: 'short' }) + ' ' +
                       date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
            }
            // Older - show date and time
            return date.toLocaleDateString([], { month: 'short', day: 'numeric' }) + ' ' +
                   date.toLocaleTimeString([], { hour: '2-digit', minute: '2-digit' });
        },

        async loadExtractionModes() {
            try {
                const response = await fetch('/api/config/extraction-modes');
                if (response.ok) {
                    const data = await response.json();
                    this.extractionModes = data.modes;
