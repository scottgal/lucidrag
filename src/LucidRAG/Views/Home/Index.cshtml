@using LucidRAG.Entities
@{
    ViewBag.Title = "LucidRag";
    var documents = ViewBag.Documents as List<DocumentEntity> ?? new List<DocumentEntity>();
    var totalSegments = ViewBag.TotalSegments as int? ?? 0;
}

<div class="flex w-full h-full" x-data="ragApp()">
    <!-- Left Sidebar: Documents -->
    <aside class="w-80 bg-base-100 border-r border-base-300 flex flex-col">
        <!-- Collection Selector -->
        <div class="p-3 border-b border-base-300 bg-base-200/30">
            <div class="flex items-center gap-2">
                <div class="dropdown dropdown-end flex-1">
                    <label tabindex="0" class="btn btn-sm btn-ghost w-full justify-between">
                        <span class="flex items-center gap-2 truncate">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                            </svg>
                            <span x-text="currentCollectionName" class="truncate"></span>
                            <template x-if="currentCollection">
                                <span class="badge badge-xs"
                                      :class="{
                                          'badge-success': currentCollection.documentCount > 0 && currentCollection.completedCount === currentCollection.documentCount,
                                          'badge-warning': currentCollection.processingCount > 0,
                                          'badge-error': currentCollection.failedCount > 0,
                                          'badge-ghost': currentCollection.documentCount === 0 || (currentCollection.pendingCount > 0 && currentCollection.processingCount === 0 && currentCollection.failedCount === 0)
                                      }"
                                      x-text="`${currentCollection.completedCount}/${currentCollection.documentCount}`">
                                </span>
                            </template>
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </label>
                    <ul tabindex="0" class="dropdown-content z-50 menu p-2 shadow-lg bg-base-100 rounded-box w-64 max-h-64 overflow-y-auto">
                        <li>
                            <a @@click="currentCollectionId = null; filterByCollection()" :class="!currentCollectionId ? 'active' : ''">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
                                </svg>
                                All Documents
                            </a>
                        </li>
                        <template x-if="collections.length > 0">
                            <li class="menu-title"><span>Collections</span></li>
                        </template>
                        <template x-for="col in collections" :key="col.id">
                            <li>
                                <a @@click="currentCollectionId = col.id; filterByCollection()"
                                   :class="currentCollectionId === col.id ? 'active' : ''"
                                   class="flex justify-between">
                                    <span class="flex items-center gap-2 truncate">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-accent" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 7v10a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-6l-2-2H5a2 2 0 00-2 2z" />
                                        </svg>
                                        <span x-text="col.name" class="truncate"></span>
                                    </span>
                                    <span class="badge badge-sm"
                                          :class="{
                                              'badge-success': col.documentCount > 0 && col.completedCount === col.documentCount,
                                              'badge-warning': col.processingCount > 0,
                                              'badge-error': col.failedCount > 0,
                                              'badge-ghost': col.documentCount === 0 || (col.pendingCount > 0 && col.processingCount === 0 && col.failedCount === 0)
                                          }"
                                          x-text="col.documentCount > 0 ? `${col.completedCount}/${col.documentCount}` : '0'">
                                    </span>
                                </a>
                            </li>
                        </template>
                        <li class="mt-2 border-t border-base-300 pt-2">
                            <a @@click.stop="showCreateCollection = true" class="text-primary">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                                </svg>
                                New Collection
                            </a>
                        </li>
                    </ul>
                </div>
                <!-- Delete collection button -->
                <template x-if="currentCollectionId">
                    <button class="btn btn-ghost btn-sm btn-square" @@click="deleteCollection(currentCollectionId)" title="Delete collection">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-error" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </button>
                </template>
            </div>
            <!-- Create collection inline form -->
            <template x-if="showCreateCollection">
                <div class="mt-2 flex gap-2">
                    <input type="text" x-model="newCollectionName" placeholder="Collection name..."
                           class="input input-sm input-bordered flex-1"
                           @@keyup.enter="createCollection()"
                           @@keyup.escape="showCreateCollection = false; newCollectionName = ''" />
                    <button class="btn btn-sm btn-primary" @@click="createCollection()" :disabled="!newCollectionName.trim()">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                    </button>
                    <button class="btn btn-sm btn-ghost" @@click="showCreateCollection = false; newCollectionName = ''">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                    </button>
                </div>
            </template>
        </div>

        <!-- Communities Dropdown -->
        <template x-if="communities.length > 0 && communityStats.totalCommunities > 0">
            <div class="p-3 border-b border-base-300 bg-base-200/20">
                <div class="dropdown dropdown-end w-full">
                    <label tabindex="0" class="btn btn-sm btn-ghost w-full justify-between">
                        <span class="flex items-center gap-2">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-secondary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
                            </svg>
                            <span x-text="selectedCommunity ? selectedCommunity.name : 'All Communities'"></span>
                            <span class="badge badge-xs badge-secondary" x-text="communityStats.totalCommunities"></span>
                        </span>
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </label>
                    <ul tabindex="0" class="dropdown-content z-50 menu p-2 shadow-lg bg-base-100 rounded-box w-72 max-h-64 overflow-y-auto">
                        <li>
                            <a @@click="selectedCommunityId = null" :class="!selectedCommunityId ? 'active' : ''">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 10h16M4 14h16M4 18h16" />
                                </svg>
                                All Communities
                            </a>
                        </li>
                        <template x-if="communityList.length > 0">
                            <li class="menu-title"><span>Detected Communities</span></li>
                        </template>
                        <template x-for="comm in communityList" :key="comm.id">
                            <li>
                                <a @@click="selectCommunity(comm)"
                                   :class="selectedCommunityId === comm.id ? 'active' : ''"
                                   class="flex justify-between">
                                    <span class="flex items-center gap-2 truncate">
                                        <span class="w-2 h-2 rounded-full" :style="{ backgroundColor: getCommunityColor(comm) }"></span>
                                        <span x-text="comm.name || `Community ${comm.id.substring(0, 8)}`" class="truncate"></span>
                                    </span>
                                    <span class="badge badge-xs badge-ghost" x-text="comm.entityCount || 0"></span>
                                </a>
                            </li>
                        </template>
                        <template x-if="communityList.length === 0">
                            <li class="text-sm text-base-content/50 px-4 py-2">
                                No communities detected yet. Communities are found during document processing.
                            </li>
                        </template>
                    </ul>
                </div>
            </div>
        </template>

        <!-- Add Content - Collapsible -->
        <div class="collapse collapse-arrow border-b border-base-300 bg-base-100" x-data="{ open: false }">
            <input type="checkbox" class="min-h-0" x-model="open" />
            <div class="collapse-title min-h-0 py-3 px-4 font-semibold flex items-center gap-2">
                <span>üìÅ</span> Add Content
                <template x-if="!open">
                    <span class="text-xs font-normal opacity-60 ml-auto">Click to expand</span>
                </template>
            </div>
            <div class="collapse-content px-4">
            <!-- Demo Mode Banner -->
            <template x-if="demoMode">
                <div class="alert alert-info text-xs mb-3 py-2">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span x-text="demoBannerMessage"></span>
                </div>
            </template>

            <!-- Tabs for Upload / Crawl (hidden in demo mode) -->
            <template x-if="!demoMode">
                <div>
                    <!-- Tab Buttons -->
                    <div class="tabs tabs-boxed mb-3">
                        <button class="tab tab-sm" :class="contentTab === 'upload' ? 'tab-active' : ''" @@click="contentTab = 'upload'">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                            </svg>
                            Upload
                        </button>
                        <button class="tab tab-sm" :class="contentTab === 'crawl' ? 'tab-active' : ''" @@click="contentTab = 'crawl'">
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                            </svg>
                            Crawl
                        </button>
                    </div>

                    <!-- Upload Tab Content -->
                    <template x-if="contentTab === 'upload'">
                        <input type="file" id="filepond-input" name="files" multiple />
                    </template>

                    <!-- Crawl Tab Content -->
                    <template x-if="contentTab === 'crawl'">
                        <div class="space-y-3">
                            <!-- URL Input -->
                            <div class="form-control">
                                <label class="label py-1">
                                    <span class="label-text text-xs">Website URL</span>
                                </label>
                                <input type="url"
                                       x-model="crawlUrl"
                                       placeholder="https://example.com"
                                       class="input input-sm input-bordered w-full" />
                            </div>

                            <!-- CSS Selector -->
                            <div class="form-control">
                                <label class="label py-1">
                                    <span class="label-text text-xs">Content Selector</span>
                                    <span class="label-text-alt text-xs opacity-60">optional</span>
                                </label>
                                <input type="text"
                                       x-model="crawlSelector"
                                       placeholder="article, .post-content, #main"
                                       class="input input-sm input-bordered w-full" />
                            </div>

                            <!-- Advanced Options (collapsed) -->
                            <div class="collapse collapse-arrow bg-base-200 rounded-lg">
                                <input type="checkbox" class="min-h-0" />
                                <div class="collapse-title text-xs font-medium min-h-0 py-2 px-3">
                                    Advanced Options
                                </div>
                                <div class="collapse-content px-3 space-y-2">
                                    <div class="form-control">
                                        <label class="label py-1">
                                            <span class="label-text text-xs">Max Pages</span>
                                        </label>
                                        <input type="number"
                                               x-model.number="crawlMaxPages"
                                               min="1" max="500"
                                               class="input input-xs input-bordered w-full" />
                                    </div>
                                    <div class="form-control">
                                        <label class="label py-1">
                                            <span class="label-text text-xs">Max Depth</span>
                                        </label>
                                        <input type="number"
                                               x-model.number="crawlMaxDepth"
                                               min="1" max="10"
                                               class="input input-xs input-bordered w-full" />
                                    </div>
                                </div>
                            </div>

                            <!-- Start Crawl Button -->
                            <button class="btn btn-primary btn-sm w-full"
                                    @@click="startCrawl()"
                                    :disabled="!crawlUrl || crawlInProgress">
                                <template x-if="!crawlInProgress">
                                    <span class="flex items-center gap-2">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
                                        </svg>
                                        Start Crawl
                                    </span>
                                </template>
                                <template x-if="crawlInProgress">
                                    <span class="flex items-center gap-2">
                                        <span class="loading loading-spinner loading-xs"></span>
                                        Crawling...
                                    </span>
                                </template>
                            </button>

                            <!-- Crawl Progress -->
                            <template x-if="crawlInProgress || crawlProgress">
                                <div class="bg-base-200 rounded-lg p-3 text-xs space-y-2">
                                    <div class="flex justify-between">
                                        <span class="opacity-60">Status:</span>
                                        <span class="badge badge-xs"
                                              :class="crawlProgress?.status === 'completed' ? 'badge-success' :
                                                      crawlProgress?.status === 'failed' ? 'badge-error' : 'badge-info'"
                                              x-text="crawlProgress?.status || 'starting'"></span>
                                    </div>
                                    <div class="flex justify-between">
                                        <span class="opacity-60">Pages:</span>
                                        <span x-text="(crawlProgress?.pagesProcessed || 0) + '/' + (crawlProgress?.pagesDiscovered || 0)"></span>
                                    </div>
                                    <template x-if="crawlProgress?.currentUrl">
                                        <div class="truncate opacity-60" x-text="crawlProgress.currentUrl"></div>
                                    </template>
                                    <template x-if="crawlProgress?.status === 'completed'">
                                        <div class="text-success">Crawl complete!</div>
                                    </template>
                                    <template x-if="crawlProgress?.errorMessage">
                                        <div class="text-error" x-text="crawlProgress.errorMessage"></div>
                                    </template>
                                </div>
                            </template>
                        </div>
                    </template>
                </div>
            </template>

            <!-- Disabled message in demo mode -->
            <template x-if="demoMode">
                <div class="text-center py-3 px-4 bg-base-200 rounded-lg border border-dashed border-base-300 opacity-75">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 mx-auto mb-2 opacity-50" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <p class="text-xs opacity-60">Uploads disabled in demo</p>
                </div>
            </template>
            </div>
        </div>

        <!-- Document Selection Header -->
        <div class="px-3 py-2 border-b border-base-300 flex items-center gap-2 text-xs">
            <span class="opacity-60">Select for chat:</span>
            <button class="btn btn-ghost btn-xs"
                    @@click="selectAllDocuments()"
                    title="Select all completed documents">
                All
            </button>
            <button class="btn btn-ghost btn-xs"
                    @@click="selectedDocIds.clear(); htmx.trigger(document.body, 'documentUploaded');"
                    title="Clear selection">
                None
            </button>
            <span class="ml-auto badge badge-sm badge-ghost" x-text="selectedDocIds.size + ' selected'"></span>
        </div>

        <!-- Processing Status (SignalR) -->
        <template x-if="processingStatus.currentDocument">
            <div class="px-3 py-2 bg-info/10 border-b border-info/30 animate-pulse">
                <div class="flex items-center gap-2 text-xs">
                    <span class="loading loading-spinner loading-xs text-info"></span>
                    <span class="font-medium text-info truncate" x-text="processingStatus.currentDocument"></span>
                </div>
                <div class="flex items-center gap-2 mt-1">
                    <progress class="progress progress-info h-1 flex-1"
                              :value="processingStatus.progress"
                              max="100"></progress>
                    <span class="text-xs opacity-60" x-text="processingStatus.stage || 'Processing...'"></span>
                </div>
            </div>
        </template>

        <!-- Recent Processing Events -->
        <template x-if="processingStatus.recentEvents.length > 0 && !processingStatus.currentDocument">
            <div class="px-3 py-1 border-b border-base-300 text-xs">
                <template x-if="processingStatus.recentEvents[0].type === 'completed'">
                    <div class="flex items-center gap-1 text-success">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                        </svg>
                        <span class="truncate" x-text="`${processingStatus.recentEvents[0].documentName} completed`"></span>
                    </div>
                </template>
                <template x-if="processingStatus.recentEvents[0].type === 'failed'">
                    <div class="flex items-center gap-1 text-error">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                        </svg>
                        <span class="truncate" x-text="`${processingStatus.recentEvents[0].documentName} failed`"></span>
                    </div>
                </template>
            </div>
        </template>

        <!-- Document List -->
        <div id="document-list" class="flex-1 overflow-y-auto p-2 space-y-1"
             hx-get="/documents" hx-trigger="documentUploaded from:body" hx-swap="innerHTML">
            @await Html.PartialAsync("_DocumentList", documents)
        </div>

        <!-- Graph Health Widget -->
        <div class="p-3 border-t border-base-300 bg-base-200/50">
            <div class="text-xs font-semibold mb-2 flex items-center gap-1">
                <span>üï∏Ô∏è</span> Graph Health
            </div>
            <div class="grid grid-cols-2 gap-2 text-xs">
                <div class="stat-item">
                    <span class="opacity-60">Nodes:</span>
                    <span class="font-medium" x-text="graphStats.nodes">0</span>
                </div>
                <div class="stat-item">
                    <span class="opacity-60">Edges:</span>
                    <span class="font-medium" x-text="graphStats.edges">0</span>
                </div>
                <div class="stat-item">
                    <span class="opacity-60">Entities:</span>
                    <span class="font-medium" x-text="graphStats.entityCoverage">0%</span>
                </div>
                <div class="stat-item">
                    <span class="opacity-60">Orphans:</span>
                    <span class="font-medium" :class="graphStats.orphans > 0 ? 'text-warning' : ''" x-text="graphStats.orphans">0</span>
                </div>
            </div>
        </div>

        <!-- Stats Footer -->
        <div class="p-3 border-t border-base-300 text-sm text-base-content/60 flex items-center justify-between">
            <div>
                <span>üìä <span x-text="documentCount">@documents.Count</span> docs</span>
                <span class="mx-1">‚Ä¢</span>
                <span>üî¢ <span x-text="segmentCount">@totalSegments</span> segs</span>
            </div>
            <!-- Dev: Clear All Button -->
            <template x-if="!demoMode">
                <button class="btn btn-ghost btn-xs text-error hover:bg-error/10"
                        @@click="clearAll()"
                        :disabled="clearingAll"
                        title="Clear all data (DEV)">
                    <template x-if="!clearingAll">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                    </template>
                    <template x-if="clearingAll">
                        <span class="loading loading-spinner loading-xs"></span>
                    </template>
                </button>
            </template>
        </div>
    </aside>

    <!-- Main: Chat + Evidence Area -->
    <main class="flex-1 flex flex-col bg-base-100 relative"
          @@dragover.prevent="if (!demoMode) isDragging = true"
          @@dragleave.prevent="isDragging = false"
          @@drop.prevent="handleDrop($event)">
        <!-- Drop Zone Overlay (not shown in demo mode) -->
        <div x-show="isDragging && !demoMode" x-cloak
             class="absolute inset-0 z-50 bg-primary/20 border-4 border-dashed border-primary rounded-lg flex items-center justify-center">
            <div class="text-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-primary mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
                </svg>
