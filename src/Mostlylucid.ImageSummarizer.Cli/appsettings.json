{
  "Images": {
    "Mode": "Caption",
    "EnableOcr": true,
    "EnableClipEmbedding": false,
    "TextLikelinessThreshold": 0.4,
    "EnableVisionLlm": true,
    "EnableFlorence2": true,
    "VisionLlmModel": "minicpm-v:8b",
    "OllamaBaseUrl": "http://localhost:11434",
    "VisionLlmTimeout": 30000,
    "TesseractLanguage": "eng",
    "ExecutionProfile": "Fast",
    "Ocr": {
      "TextDetectionConfidenceThreshold": 0.3,
      "SpellCheckEnabled": true,
      "QualityMode": "Balanced",
      "FilmstripFrames": 4,
      "MaxFramesToProcess": 4
    },
    "OcrSummarization": {
      "Enabled": true,
      "MinTextLengthForSummary": 200
    },
    "Waves": {
      "MlOcrWave": {
        "Parameters": {
          "filmstrip_frames": 4,
          "max_frames_to_process": 4
        }
      },
      "Florence2Wave": {
        "Parameters": {
          "filmstrip_frames": 3
        }
      },
      "MotionWave": {
        "Parameters": {
          "enable_motion_identification": false
        }
      }
    }
  },
  "DocSummarizer": {
    "Mode": "BertRag",
    "Bert": {
      "MaxSentences": 3,
      "DiversityWeight": 0.3
    },
    "Ollama": {
      "BaseUrl": "http://localhost:11434",
      "Model": "llama3.2:3b"
    }
  },
  "Logging": {
    "LogLevel": {
      "Default": "Error",
      "Microsoft": "Error",
      "System": "Error"
    }
  }
}
